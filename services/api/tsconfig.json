{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "strictNullChecks": false,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "*": [
        "node_modules/*",
        "src/bin/types/*"
      ],
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": ["src/**/*", "package.json", ".eslintrc.js"],
  "exclude": ["node_modules"]
}