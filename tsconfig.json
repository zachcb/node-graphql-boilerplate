{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES6",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "sourceRoot": "src",
    "outDir": ".build",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "removeComments": true,
    "lib": ["esnext", "esnext.asynciterable"],
  },
  "include": [
    "services/api/**/*.ts"
  ],
  "exclude": ["node_modules", ".build", ".docker"]
}